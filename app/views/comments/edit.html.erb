
<div class="container">
    <h3> Edit your comment </h3>

    <%= form_for [@post, @comment] do |f| %>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_field :body, :class => "form-control", :rows => 5 %>
      </div>
      <div class="form-group">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    <% end %>
</div>
