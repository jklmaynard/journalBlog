<%= render 'layouts/errors', :object => @comment %>

<div id="form-box">
  <%= form_for [@post, @comment], remote: true do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body, :class => "form-control", :rows => 5 %>
    </div>
    <div class="form-group">
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.submit %>
    </div>
  <% end %>
</div>
