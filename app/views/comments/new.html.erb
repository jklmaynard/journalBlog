<div class="container">

  <h4>Write your comment here!</h4>

  <%= form_for [@post, @comment] do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body, :class => "form-control", :rows => 5 %>
    </div>
    <div class="form-group">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  <% end %>


</div>
