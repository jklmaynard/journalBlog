<div class="container">
  <h1>How About a Journal Blog?</h1>

  <% if @posts.any? %>
    <h4>Your Posts:</h4>

    <ul>
      <% @posts.each do |post| %>
        <li><%= post.title %></li>
      <% end %>
    </ul>
  <% else %>
    <p>
      No posts yet!<br>
    </p>
  <% end %>
  <%= link_to "Write post", new_post_path %>
</div>
