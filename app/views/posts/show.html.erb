<div class="container">

  <h3><%= @post.title %></h3>
  <p><%= @post.body %></p>

  <%= link_to "Delete", post_path(@post),
                :data => {:confirm => "Sure you wanna do that?",
                          :method => "delete" },
                :class => "btn btn-sm btn-danger" %>
  <br>
  <%= link_to "Return to posts", posts_path,
                :class => "btn btn-sm btn-primary",
                :style => "margin: 10px 0;" %>

</div>
